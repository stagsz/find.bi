    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
