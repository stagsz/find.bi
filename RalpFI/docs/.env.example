# Project
PROJECT_NAME=myapp

# Database (PostgreSQL)
DATABASE_URL=postgresql://app:devpassword@localhost:5432/app
DB_USER=app
DB_PASSWORD=devpassword
DB_NAME=app

# Redis (for caching, queues, sessions)
REDIS_URL=redis://localhost:6379/0

# Auth (fill in based on your provider)
# Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.yourapp.com

# Or Clerk
# CLERK_SECRET_KEY=sk_test_xxx
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Storage (if needed)
# AWS S3
AWS_S3_BUCKET=your-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx

# Or Supabase Storage
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=xxx
# SUPABASE_STORAGE_BUCKET=uploads

# Frontend env vars (Vite uses VITE_ prefix)
VITE_API_URL=http://localhost:8000
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id

# App settings
SECRET_KEY=change-this-to-a-random-string-at-least-32-chars
ENVIRONMENT=development
DEBUG=true
