{
  "name": "hazop-assistant",
  "version": "0.0.1",
  "private": true,
  "description": "HazOp Assistant - Industrial safety analysis platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "test:e2e": "npx playwright test --config=e2e/playwright.config.ts",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json}\" \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json}\" \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "db:migrate": "npm run migrate -w @hazop/api",
    "db:migrate:status": "npm run migrate:status -w @hazop/api",
    "db:migrate:dry-run": "npm run migrate:dry-run -w @hazop/api"
  },
  "dependencies": {
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@nx/js": "^20.0.0",
    "@types/multer": "^1.4.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "nx": "^20.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
